<% if notice %>
    <div class="row"></div>
    <div class="row center">
        <div id="notice" class="card col s4 offset-s4 center green lighten-5">
            <h5 class="green-text"><%= notice %></h5>
        </div>
    </div>
<% end %>

<h1>Home</h1>

<% if current_user %>
    <p>
        <%= link_to 'Sign Out', destroy_user_session_path %>
    </p>
    <p>
        <%= link_to 'Edit Account', edit_user_registration_path %>
    </p>
    <br/>
    <%= image_tag(current_user.avatar.attached? ? current_user.avatar_thumbnail : current_user.avatar_thumbnail) %>
<% else %>
    <p>
        <%= link_to 'Create Account', new_user_registration_path %>
    </p>
    <p>
        <%= link_to 'Sign In', new_user_session_path %>
    </p>
<% end %>

<p>
    <%= link_to 'Users', 'users/' %>
</p>