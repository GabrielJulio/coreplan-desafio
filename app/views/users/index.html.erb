<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <td><b>Nickname</b></td>
      <% if current_user %>
        <td><b>Full Name</b></td>
        <td><b>Age</b></td>
        <td><b>Gender</b></td>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.nickname %></td>
        <% if current_user %>
          <td><%= user.full_name %></td>
          <td><%= user.birth_date %></td>
          <td><%= user.gender %></td>
        <% end %>
        <td><%= link_to 'Profile Page', user_path(user.nickname) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %> |
